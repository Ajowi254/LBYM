{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["category_id", "goal_amount"],
    "properties": {
      "category_id": {
        "type": "integer"
      },
      "goal_amount": {
        "type": "number",
        "minimum": 0.01
      },
      "description": {
        "type": "string",
        "maxLength": 255
      },
      "due_date": {
        "type": "string",
        "format": "date"
      }
    }
  }
